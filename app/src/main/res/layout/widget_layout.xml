<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_samvat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="વિક્રમ સંવત - ૨૦૮૨"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@color/light_gray"
        android:padding="8dp">

        <TextView
            android:id="@+id/widget_month_tithi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="માગશર વદ - આઠમ"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/widget_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="શુક્રવાર"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_yellow"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ચોઘડિયું"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"
            android:gravity="center"/>

        <TextView
            android:id="@+id/widget_choghadiya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="લાભ"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/widget_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"/>

</LinearLayout>
